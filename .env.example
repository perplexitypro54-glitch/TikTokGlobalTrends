# Application Environment
ENVIRONMENT=development
DEBUG=True

# TikTok API Configuration
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here
TIKTOK_API_BASE_URL=https://open-api.tiktok.com

# Database Configuration (SQLite)
DATABASE_URL=sqlite:///./data/tiktok_trends.db
DATABASE_ECHO=False

# Optional: Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# UI Configuration
UI_THEME=dark
UI_WINDOW_SIZE=1200x800

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_FORMAT=json

# Compliance & Data Protection
COMPLIANCE_REGIONS=LGPD,GDPR,CCPA,PDPA
DATA_RETENTION_DAYS=365
ENABLE_COMPLIANCE_LOGGING=True
ENABLE_AUDIT_LOGGING=True

# Scraping Configuration
PLAYWRIGHT_HEADLESS=True
PLAYWRIGHT_TIMEOUT=30000
REQUEST_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=600
RATE_LIMIT_WINDOW=60

# Collection Configuration
COLLECTION_FREQUENCY_HOURS=6
ENABLED_COUNTRIES=US,BR
ENABLED_NICHES=BookTok,FitTok,FoodTok,MusicTok,DanceTok,BeautyTok,EducationTok,ComedyTok,GamingTok,FinanceTok,TravelTok,FashionTok,HealthTok,DiyTok,PetsTok

# Monitoring & Metrics
ENABLE_PROMETHEUS_METRICS=True
PROMETHEUS_PORT=9090
ENABLE_ALERTS=True
ALERT_WEBHOOK_URL=

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_EXPIRY_DAYS=30
PASSWORD_MIN_LENGTH=12

# Cache Configuration
CACHE_ENABLED=True
CACHE_TTL_SECONDS=3600

# Feature Flags
ENABLE_API_ENDPOINTS=True
ENABLE_UI_DASHBOARD=True
ENABLE_SCHEDULED_JOBS=True
ENABLE_DATA_EXPORT=True
